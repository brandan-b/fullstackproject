<section class="section">
  <h1 class="title"><%= product_name(@product) %></h1>
  <p class="subtitle"><%= product_price(@product) %></p>

  <% if product_description(@product) %>
    <div class="content m-b-4">
      <%= simple_format(product_description(@product)) %>
    </div>
  <% end %>

  <div class="buttons">
    <%= form_with url: cart_path, method: :patch, local: true, class: "field is-grouped" do %>
      <%= hidden_field_tag :product_id, @product.id %>
      <div class="control">
        <%= number_field_tag :quantity, 1, min: 1, class: "input", style: "width: 5rem;" %>
      </div>
      <div class="control">
        <%= submit_tag "Add to cart", class: "button is-primary" %>
      </div>
    <% end %>
 <%= link_to "Back to products", products_path, class: "button" %>
  </div>
</section>
