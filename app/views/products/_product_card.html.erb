<div class="card m-3" style="max-width: 360px;">
  <div class="card-content">
    <p class="title is-6 m-b-1"><%= product_name(product) %></p>
    <p class="subtitle is-6 m-b-3"><%= product_price(product) %></p>

    <div class="buttons">
      <%= link_to "View", product_path(product), class: "button is-light" %>

      <%= form_with url: cart_path, method: :patch, local: true, class: "field is-grouped" do %>
        <%= hidden_field_tag :product_id, product.id %>
        <div class="control">
          <%= number_field_tag :quantity, 1, min: 1, class: "input", style: "width: 4.5rem;" %>
        </div>
        <div class="control">
          <%= submit_tag "Add to cart", class: "button is-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
